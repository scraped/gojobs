{{#if xhr}}
  {{> jobs}}
{{else}}
  <section class="section">
    <div class="container">
      {{#if partials.jobsContext}}
        <h1 class="title">
          GTA Online Jobs
          <div class="dropdown" id="platform">
            <div class="dropdown-trigger is-unselectable" onclick="platform.classList.toggle('is-active')">
              <span style="cursor: pointer; border-bottom: 1px dashed #000000;">
                for PC
              </span>
            </div>
            <div class="dropdown-menu">
              <div class="dropdown-content">
                <a href="#" class="dropdown-item">
                  PS4
                </a>
                <a href="#" class="dropdown-item">
                  Xbox One
                </a>
                <a href="#" class="dropdown-item">
                  PS3
                </a>
                <a href="#" class="dropdown-item">
                  Xbox 360
                </a>
              </div>
            </div>
          </div>
        </h1>

        <div class="field is-hidden-desktop">
          {{#each modes}}
            <a class="button is-circle tooltip" data-tooltip="{{name}}" onclick="this.classList.toggle('is-primary')">
            <span class="icon icon-gta">&#x{{icon}};</span>
          </a>
          {{/each}}
        </div>
        <div class="field">
          <div class="tags">
            <span class="tag is-primary">Members</span>
            <span class="tag">Rockstar</span>
            <span class="tag">Rockstar Verified</span>
          </div>
        </div>

        <div class="columns">
          <div class="column">
            <div id="jobsList">
              {{> jobs}}
            </div>

            <br>
            <a class="button is-medium" style="width: 100%;" id="loadJobsList" data-current-page="{{pagination.current_page}}">
              Show more
              <span class="icon" style="margin-left: 5px;">
                <i class="fa fa-angle-down"></i>
              </span>
            </a>
          </div>
        </div>

        <div class="box is-shadowless">
        {{#if pagination}}
        <nav class="pagination is-centered" role="navigation" aria-label="pagination">
          {{#if pagination.has_previous_page}}
            <a class="pagination-previous" href="/?page={{pagination.previous_page}}">
              ← Previous page
            </a>
          {{/if}}
          <ul class="pagination-list">
            {{#each pagination.pages}}
              {{#if page}}
                {{#if isCurrent}}
                  <li>
                    <a
                      class="pagination-link is-current"
                      aria-label="Page {{page}}"
                      aria-current="page">
                        {{page}}
                    </a>
                  </li>
                {{else}}
                  <li>
                    <a
                      class="pagination-link"
                      href="/?page={{page}}"
                      aria-label="Goto page {{page}}">
                      {{page}}
                    </a>
                  </li>
                {{/if}}
              {{else}}
                <li>
                  <span class="pagination-ellipsis">&hellip;</span>
                </li>
              {{/if}}
            {{/each}}
          </ul>


          {{#if pagination.has_next_page}}
            <a class="pagination-next" href="/?page={{pagination.next_page}}">
              Next page →
            </a>
          {{/if}}

        </nav>
        {{/if}}
      {{else}}
        <article class="message is-danger">
          <div class="message-body">
            <p class="subtitle is-4">No jobs found on your request.</p>
          </div>
        </article>
      {{/if}}
      </div>
    </div>
  </section>
{{/if}}
