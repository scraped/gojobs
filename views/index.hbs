{{#if xhr}}
  {{> jobs}}
{{else}}
<section class="hero is-dark" style="background: url(https://prod.hosted.cloud.rockstargames.com/ugc/gta5photo/hyq4gkO8UE-Hw80pZWazMA_0_0.jpg); background-size: cover;">
  <div class="hero-body">
    <div class="container">
      <h1 class="title">
        GTA Online Jobs
        <div class="dropdown" id="platform">
          <div class="dropdown-trigger is-unselectable" onclick="platform.classList.toggle('is-active')">
            <span style="cursor: pointer; border-bottom: 1px dashed #ffffff;">
              for PC
            </span>
          </div>
          <div class="dropdown-menu">
            <div class="dropdown-content">
              <a href="#" class="dropdown-item">
                PS4
              </a>
              <a href="#" class="dropdown-item">
                Xbox One
              </a>
              <a href="#" class="dropdown-item">
                PS3
              </a>
              <a href="#" class="dropdown-item">
                Xbox 360
              </a>
            </div>
          </div>
        </div>
      </h1>

      <div class="tags">
        <a class="tag is-primary">PC</a>
        <a class="tag is-primary">Any type</a>
      </div>
      <h2 class="subtitle is-6" onclick="searchparams.classList.toggle('is-hidden')" style="cursor: pointer; user-select: none; -moz-user-select: none;">Advanced search <i class="fa fa-angle-down"></i></h2>
      <div class="is-hidden" id="searchparams">
        <div class="field">
          <label class="label-mode" for="f17f">
            <input type="radio" name="mode" id="{{f17f}}" value="{{f17f}}" checked>
            <a class="button is-light is-circle tooltip" data-tooltip="Any">
              <span class="icon is-large icon-gta">&#xf17f;</span>
            </a>
          </label>
          {{#each modes}}
            <label class="label-mode" for="{{icon}}">
              <input type="radio" name="mode" id="{{icon}}" value="{{icon}}">
              <a class="button is-light is-circle tooltip" data-tooltip="{{name}}">
                <span class="icon is-large icon-gta">&#x{{icon}};</span>
              </a>
            </label>
          {{/each}}
        </div>
      </div>
    </div>
  </div>
</section>
  <section class="section">
    <div class="container">
      {{#if partials.jobsContext}}
        <div class="subtitle is-5"><i>Collections</i></div>
        <div class="field is-grouped">
          <p class="control">
            <a class="button is-light">
              Rockstar Jobs
            </a>
          </p>
          <p class="control">
            <a class="button is-light">
              Rockstar Verified Jobs
            </a>
          </p>
        </div>

        <div class="columns">
          <div class="column">
            <div id="jobsList">
              {{> jobs}}
            </div>

            <br>
            <a class="button is-medium" style="width: 100%;" id="loadJobsList" data-current-page="{{pagination.current_page}}">
              Show more
              <span class="icon" style="margin-left: 5px;">
                <i class="fa fa-angle-down"></i>
              </span>
            </a>
          </div>
        </div>

        <div class="box is-shadowless">
        {{#if pagination}}
        <nav class="pagination is-centered" role="navigation" aria-label="pagination">
          {{#if pagination.has_previous_page}}
            <a class="pagination-previous" href="/?page={{pagination.previous_page}}">
              ← Previous page
            </a>
          {{/if}}
          <ul class="pagination-list">
            {{#each pagination.pages}}
              {{#if page}}
                {{#if isCurrent}}
                  <li>
                    <a
                      class="pagination-link is-current"
                      aria-label="Page {{page}}"
                      aria-current="page">
                        {{page}}
                    </a>
                  </li>
                {{else}}
                  <li>
                    <a
                      class="pagination-link"
                      href="/?page={{page}}"
                      aria-label="Goto page {{page}}">
                      {{page}}
                    </a>
                  </li>
                {{/if}}
              {{else}}
                <li>
                  <span class="pagination-ellipsis">&hellip;</span>
                </li>
              {{/if}}
            {{/each}}
          </ul>


          {{#if pagination.has_next_page}}
            <a class="pagination-next" href="/?page={{pagination.next_page}}">
              Next page →
            </a>
          {{/if}}

        </nav>
        {{/if}}
      {{else}}
        <article class="message is-danger">
          <div class="message-body">
            <p class="subtitle is-4">No jobs found on your request.</p>
          </div>
        </article>
      {{/if}}
      </div>
    </div>
  </section>
{{/if}}
