{{> menu}}

<section class="section">
  <div class="container">
    <h1 class="title">
      Admin panel
    </h1>

    <form name="upload">
      <div class="field">
        <label class="label" for="url">
          Add a crew
        </label>
        <div class="control">
          <input class="input" name="url" id="url" type="text" placeholder="Crew Jobs Search URL">
        </div>
      </div>

      <div class="field">
        <div class="control">
          <button class="button is-primary" name="send">Add a crew</button>
        </div>
      </div>
    </form>

    <p id="response"></p>
  </div>
</section>

<script src="/js/upload.js" async></script>
