<h1 class="title">
  GTA Online Jobs
</h1>

<div class="columns">
  <div class="column is-3">
    <div class="box" id="left-menu">
      <form action="/">
        <div class="field">
          <label class="label" for="author">Author</label>
          <div class="control has-icons-left">
            <input class="input" name="author" id="author" type="text" placeholder="Nickname" value="{{query.author}}">
            <span class="icon is-small is-left">
              <i class="fa fa-at"></i>
            </span>
          </div>
        </div>

        <div class="field">
          <input class="is-checkbox is-circle" id="rstar" type="checkbox" name="rstar">
          <label for="rstar">Rockstar Job</label>
        </div>

        <div class="field">
          <input class="is-checkbox is-circle" id="rstarverif" type="checkbox" name="rstarverif">
          <label for="rstarverif">Rockstar Verified Job</label>
        </div>

        <div class="field">
          <label class="label">Platform</label>
            <div class="tags">
              <span class="tag is-primary">Any</span>
              <span class="tag is-dark">PC</span>
              <span class="tag is-dark">PS4</span>
              <span class="tag is-dark">XB1</span>
            </div>
        </div>
      </form>
    </div>
  </div>

  <div class="column">
    <div class="columns is-multiline" id="jobs">
      {{#each partials.jobsContext}}
      <div class="column is-12 is-half-desktop">
        <div class="card">
          <a href="/job/{{jobId}}">
            <div class="card-image" style="position: relative;">
              <div class="card-image-text">
                <p class="title is-5">
                  <span class="tooltip tooltip-bottom" data-tooltip="Mode: {{mode.name}}">
                    <img class="" src="/images/mode-{{mode.icon}}-white.png" width="16" height="16" style="margin: 0 5px;">
                  </span>
                  {{{name}}}
                </p>
              </div>

              <div style="position: absolute; top: 0; left: 0; background: #23d160; z-index: 100; width: {{stats.rating}}%; height: 4px;">
              </div>

              <figure class="image is-2by1">
                <img src="{{imageUrl}}" alt="Job image" style="background-color: #e1e1e1;">
              </figure>
            </a>
          </div>

          <div class="card-content">
            <div class="media">
              <div class="media-left">
                <figure class="image image-avatar is-48x48">
                  {{#if verif}}
                    <img src="/images/rockstar-avatar-48.png" alt="Author avatar">
                  {{else}}
                    <img src="https://a.rsg.sc/n/{{lowerCase author}}/s" alt="Author avatar">
                    <div class="image-avatar-medal">
                      <div class="tooltip tooltip-right" style="background-image: url(/images/medal-{{creator.medal}}.png)" data-tooltip="Medal"></div>
                    </div>
                  {{/if}}
                </figure>
              </div>

              <div class="media-content" style="width: 1px;">
                <p class="subtitle is-6">
                  {{#if verif}}
                    <a href="/?verif={{verif}}">
                      {{verification}}
                    </a>
                  {{else}}
                    <a href="/?author={{author}}">
                      @{{author}}
                    </a>
                  {{/if}}

                  {{!--  --}}
                  {{!-- {#if creator.crew.tag}}
                    <span class="tag is-white" style="margin-left: 4px; border: 1px solid #{creator.crew.color}}">
                      {creator.crew.tag}}
                    </span>
                  {/if}} --}}
                  {{!--  --}}

                  <br>
                  <small><i>{{updatedDateString}}</i></small>
                </p>
              </div>

              <div class="media-right">
                <div><div class="icon">
                  <i class="fa fa-bookmark fa-lg" aria-hidden="true"></i>
                </div></div>
                {{#if verif}}
                  <div><div class="icon tooltip tooltip-left" data-tooltip="{{verification}}">
                    <i class="fa fa-check-circle fa-lg" aria-hidden="true"></i>
                  </div></div>
                {{/if}}
              </div>
            </div>

            <div class="content">
              <div class="tags">
                {{#if author}}
                  <a class="tag" href="/?verif={{../query.verif}}&author={{../query.author}}&plat={{platId}}">
                    Platform: {{platform}}
                  </a>
                {{else}}
                  <a class="tag" href="/?verif={{../query.verif}}&author={{../query.author}}">
                    All platforms
                  </a>
                {{/if}}
                <span class="tag">{{stats.ratingPoints}}</span>
                {{!-- <span class="tag">Tag2</span>
                <span class="tag">Tag3</span> --}}
              </div>
            </div>
          </div>

          <footer class="card-footer">
            <div class="card-footer-item tooltip" data-tooltip="People played this: {{stats.playUnq}}">
              <i class="fa fa-gamepad fa-lg" aria-hidden="true" style="margin-right: 3px;"></i>
              {{stats.playTot}}
            </div>
            <div class="card-footer-item tooltip" data-tooltip="Dislikes: {{stats.dlikes}}, optimal rating: {{stats.ratingQuit}}%">
              <i class="fa fa-thumbs-up fa-lg" aria-hidden="true" style="margin-right: 1px;"></i>
              {{stats.likes}}
              <span class="tag is-light" style="margin-left: 6px;">
                {{stats.rating}}%
              </span>
            </div>
          </footer>
        </div>
      </div>
      {{/each}}
    </div>

  </div>
</div>
