{
  "env": {
    "browser": true,
    "commonjs": true,
    "es6": true,
    "node": true
  },
  "parserOptions": {
    "parser": "babel-eslint",
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "extends": [
    "eslint:recommended",
    "airbnb-base",
    "plugin:vue/recommended"
  ],
  "rules": {
    "import/no-extraneous-dependencies": [
      "error",
      {"devDependencies": ["build/*.js"]}
    ],
    "object-curly-spacing": ["error", "never"],
    "linebreak-style": ["error", "windows"],
    "class-methods-use-this": 0,
    "prefer-const": 0,
    "prefer-destructuring": 0,
    "no-console": 0,
    "no-return-await": 0,
    "no-plusplus": 0,
    "object-curly-newline": 0
  }
}
